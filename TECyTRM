        </footer>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const hamburgerButton = document.querySelector('.hamburger-button');
            const sidebar = document.getElementById('sidebarNav');
            const body = document.body;
            const topBarHeight = parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--top-bar-height')) || 65;

            if (hamburgerButton && sidebar) {
                hamburgerButton.addEventListener('click', function () {
                    body.classList.toggle('sidebar-open');
                    const isExpanded = body.classList.contains('sidebar-open');
                    hamburgerButton.setAttribute('aria-expanded', isExpanded);
                    sidebar.setAttribute('aria-hidden', !isExpanded);
                });
            }

            const sidebarLinks = document.querySelectorAll('.sidebar-nav a');
            sidebarLinks.forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        // Adjusted to ensure the title of the section is fully visible below the top bar
                        const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - topBarHeight - 15; // 15px buffer
                        window.scrollTo({ top: targetPosition, behavior: 'smooth' });
                        
                        // Close sidebar on link click on mobile if it's open
                        if (window.innerWidth < 768 && body.classList.contains('sidebar-open')) { // 768px is a common breakpoint for mobile
                           body.classList.remove('sidebar-open');
                           hamburgerButton.setAttribute('aria-expanded', 'false');
                           sidebar.setAttribute('aria-hidden', 'true');
                        }
                    }
                });
            });

            // Active link highlighting in sidebar
            const sections = document.querySelectorAll('.main-content section[id]');
            function highlightSidebarLink() {
                let current = '';
                sections.forEach(section => {
                    const sectionTopMargin = parseFloat(window.getComputedStyle(section).marginTop) || 0;
                    // Adjust offset for highlighting to consider the top bar and a small buffer
                    const sectionEffectiveTop = section.getBoundingClientRect().top + window.pageYOffset - topBarHeight - sectionTopMargin - 20; // 20px buffer
                
                    if (window.pageYOffset >= sectionEffectiveTop) {
                        current = section.getAttribute('id');
                    }
                });

                sidebarLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').substring(1) === current) {
                        link.classList.add('active');
                    }
                });
            }
            window.addEventListener('scroll', highlightSidebarLink);
            highlightSidebarLink(); // Initial call to highlight link on load
        });
    </script>
</body>
</html>
